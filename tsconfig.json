{
  "compilerOptions": {
    "target": "es2020",
    "noEmit": true,
    "outDir": "dist",
    "allowJs": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "checkJs": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "goToDefinition": true
        }
      }
    ]
  },
  "include": ["**/*", ".eslintrc.js"],
  "exclude": [
    "cdk.out",
    "gatsby-*.js",
    "coverage",
    "node_modules",
    "public",
    ".cache",
    "./dist",
    ".vim",
    ".yarn"
  ]
}
